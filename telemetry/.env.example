# Database configuration
DB_PATH=./data/windy.db

# Sensor configuration
AM2320_ENABLED=true
AM2320_BUS_NUMBER=1
AM2320_ADDRESS=0x5C
AM2320_LOCATION="Default Location"

# Wind sensor configuration
WIND_SENSOR_ENABLED=true
WIND_SENSOR_ADDRESS=0x48
WIND_SENSOR_LOCATION="Default Location"

# Collection configuration
COLLECTION_INTERVAL=60

# API security
API_KEY=your_secret_api_key_here
REQUIRE_API_KEY=true

# API submission (for distributed sensors)
USE_API_SUBMISSION=false
API_URL=http://localhost:5000

# Flask API configuration
FLASK_ENV=development
FLASK_DEBUG=1
FLASK_APP=api.py
FLASK_RUN_PORT=5000
FLASK_RUN_HOST=0.0.0.0
